<Window x:Class="WorkClocker.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="104" Width="142" MinHeight="104" MinWidth="240" Icon="Resources/wrench.png" SizeToContent="Height" Loaded="Window_Loaded">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="AFK Delay" Margin="0" VerticalAlignment="Top" HorizontalAlignment="Center"/>
        <TextBox Grid.Column="1" Grid.Row="0" Height="23" Margin="0,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Text="{Binding Source={StaticResource Settings}, Path=Default.AFKDelay}"/>

        <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Content="Save" Margin="0,10" VerticalAlignment="Bottom" Width="70"/>
    </Grid>
</Window>
